<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".peer.PeerActivity">

    <Button
            android:text="退出"
            android:layout_width="180dp"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="surrender"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.916"
            android:textSize="20dp"/>
    <TextView
            android:text="你的顏色:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintVertical_bias="0.077" android:textSize="20dp"/>
    <TextView
            android:text="狀態"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintVertical_bias="0.146" android:textSize="20dp"/>
    <com.example.gobang.peer.ChessBoardASync
            android:layout_width="385dp"
            android:layout_height="385dp" app:srcCompat="@drawable/chessboard" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.531"
            app:layout_constraintHorizontal_bias="0.615"/>

</androidx.constraintlayout.widget.ConstraintLayout>